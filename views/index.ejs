<div class="author">
    <h1 class="authorHeading">Hi, I am Pramodh.</h1>
    <p class="authorBody">Web Developer</p>
</div>

<div class="imageContainer">
    <img src="/img/hero-image.webp" alt="Author" class="authorImage" width="981" height="528">
</div>

<section class="articles">
    <h2 class="articleHeading">Latest Posts</h2>
    <ul class="articleUl">
        <% data.forEach((article) => { %>
        <li>
            <a href="/article/<%= article._id %>">
                <span class="articleListTitle"><%= article.title %></span>
                <span class="articleListDate"><%= article.createdAt.toDateString()%></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if(nextPage !== null) { %>
    <a href="/?page=<% nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>