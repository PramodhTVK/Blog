<div class="author">
    <h1 class="authorHeading">Welcome <%= username %>!</h1>
    <p class="authorBody">A blog app with minimalist design pattern.</p>
</div>

<div class="imageContainer">
    <img src="/img/hero-image.webp" alt="Author" class="authorImage" width="981" height="528">
</div>

<div class="createBlogs" id="createBlogs">
    <div class="blogContainer">
        <a href="/create" class="createBlogButton">
            <span>Create a new blog</span>
        </a>       
    </div>
</div>

<section class="articles">
    <h2 class="articleHeading">Latest Posts</h2>
    <ul class="articleUl">
        <% data.forEach((article) => { %>
        <li>
            <a href="/article/<%= article._id %>">
                <span class="articleListTitle"><%= article.title %></span>
                <span class="articleListDate"><%= article.createdAt.toDateString()%></span>
            </a>
        </li>
        <% }) %>
    </ul>

    <% if(nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>